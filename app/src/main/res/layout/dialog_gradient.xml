<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:stepSize="1"
        android:valueTo="100"
        app:tickVisible="false"
        app:thumbColor="@color/colorSecondary"
        app:trackColorActive="@color/colorSecondary"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sliderg1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:stepSize="1"
        android:valueTo="100"
        app:tickVisible="false"
        app:thumbColor="@color/colorSecondary"
        app:trackColorActive="@color/colorSecondary"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderg3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sliderg2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:stepSize="1"
        android:valueTo="100"
        app:tickVisible="false"
        app:thumbColor="@color/colorSecondary"
        app:trackColorActive="@color/colorSecondary"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/getcolor1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sliderg3"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border3"
        android:gravity="center"
        android:padding="5dp"
        android:text="رنگ اول"
        android:textColor="@color/text_selected" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/getcolor2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sliderg3"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/border3"
        android:gravity="center"
        android:padding="5dp"
        android:text="رنگ دوم"
        android:textColor="@color/text_selected" />

</RelativeLayout>